    <div class="container text-center">
        <h1 class="mt-5">Welcome to the NBA Game Management System</h1>
        <p class="lead">Manage players' information easily.</p>
        <div class="mt-5">
            <a href="/players" class="btn btn-primary btn-lg">View Players</a>
            <a href="/players/create" class="btn btn-success btn-lg">Add New Player</a>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
